<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Osdi</base>
  <class>OsdiRemoteSystem</class>
  <name>civicrm_osdi_remote_system</name>
  <comment>Remote OSDI-accessible databases</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <title>ID</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique OsdiRemoteSystem ID</comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>label</name>
    <title>Name</title>
    <type>varchar</type>
    <length>255</length>
    <html>
      <type>Text</type>
      <size>64</size>
    </html>
    <comment>Display name</comment>
    <localizable>true</localizable>
    <import>true</import>
    <export>true</export>
  </field>

  <field>
    <name>entry_point</name>
    <title>API Entry Point URL</title>
    <type>varchar</type>
    <length>1023</length>
    <html>
      <type>Text</type>
      <size>64</size>
    </html>
    <comment>API entry point (AEP) URL</comment>
    <import>true</import>
    <export>true</export>
  </field>

  <field>
    <name>api_token</name>
    <title>API Token</title>
    <type>varchar</type>
    <length>1023</length>
    <html>
      <type>Text</type>
      <size>64</size>
    </html>
    <comment>API token</comment>
    <import>true</import>
    <export>true</export>
  </field>

</table>
