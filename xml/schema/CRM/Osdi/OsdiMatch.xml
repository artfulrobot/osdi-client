<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Osdi</base>
  <class>OsdiMatch</class>
  <name>civicrm_osdi_match</name>
  <comment>Linkages between CiviCRM contacts and their counterparts on remote OSDI systems</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <title>ID</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique OsdiMatch ID</comment>
    <import>true</import>
    <export>true</export>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <title>Local Contact ID</title>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
    <import>true</import>
    <export>true</export>
  </field>
  <index>
    <name>index_contact_id</name>
    <fieldName>contact_id</fieldName>
  </index>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>remote_system_id</name>
    <title>Remote OSDI System ID</title>
    <type>int unsigned</type>
    <comment>FK to OSDI Remote System</comment>
    <import>true</import>
    <export>true</export>
  </field>
  <index>
    <name>index_remote_system_id</name>
    <fieldName>remote_system_id</fieldName>
  </index>
  <foreignKey>
    <name>remote_system_id</name>
    <table>civicrm_osdi_remote_system</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>remote_person_id</name>
    <title>Remote Person Identifier</title>
    <type>varchar</type>
    <length>255</length>
    <default>NULL</default>
    <comment>FK to identifier field on remote system</comment>
    <import>true</import>
    <export>true</export>
  </field>
  <index>
    <name>index_remote_person_id</name>
    <fieldName>remote_person_id</fieldName>
  </index>

  <field>
    <name>sync_origin_modified_time</name>
    <title>Origin Last Synced Modification Time</title>
    <type>datetime</type>
    <default>NULL</default>
    <comment>Modification date and time of the origin record as of the last sync, in UTC</comment>
    <import>true</import>
    <export>true</export>
  </field>
  <index>
    <name>index_sync_origin_modified_time</name>
    <fieldName>sync_origin_modified_time</fieldName>
  </index>

  <field>
    <name>sync_target_modified_time</name>
    <title>Target Last Synced Modification Time</title>
    <type>datetime</type>
    <default>NULL</default>
    <comment>Modification date and time of the target record as of the last sync, in UTC</comment>
    <import>true</import>
    <export>true</export>
  </field>
  <index>
    <name>index_sync_target_modified_time</name>
    <fieldName>sync_target_modified_time</fieldName>
  </index>

  <field>
    <name>sync_origin</name>
    <title>Origin of Last Sync</title>
    <type>boolean</type>
    <default>NULL</default>
    <pseudoconstant>
      <callback>CRM_OSDI_LinkageTracker::syncOriginPseudoConstant</callback>
    </pseudoconstant>
    <comment>0 if local CiviCRM was the origin of the last sync, 1 if remote system was the origin</comment>
  </field>

</table>
